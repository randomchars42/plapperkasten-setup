# overwrite settings here
---
core:
  paths:
    # the user config directory
    user_directory: '~/.config/plapperkasten'
    # where to expect the plugins
    # relative to the user config directory
    plugins: 'plugins'
    # where to expect the user-defined eventmap
    # relative to the user config directory
    eventmap: 'events.map'
  mapping:
    # the delimiter to use in a map file
    delimiter: '|'
  system:
    debug: False
  events:
    # pass those events to all plugins that listen
    passthrough: ['play','stop','toggle','next','previous','load_source','volume_increase','volume_decrease','volume_max','toggle_pwwp_sink']
  plugins:
    # do not load example plugin
    blacklist: ['example', 'soundalsa']
plugins:
  inputgpiod:
    chip: 0
    # listen to those GPIO pins
    press_short: [27,12,25,13,24]
    # accept additional long press events from those pins
    press_long: [12,17]
    # the BCM number of the pins to fire repetitively while active
    press_pulse: [27,25,13,24]
    # the number of seconds between two pulsed "BCMNUMBER_pulsed" signals
    # on monitored pins (see above)
    press_pulse_interval: 0.3
    # duration in seconds
    long_press_duration: 1.5
  inputdevinputevent:
    # RFID device sends on /dev/input/event0
    devices: ['/dev/input/event0']
  inputnamedpipe:
    # name of the pipe
    name: 'plapperkasten_pipe_in'
    # interval to check for new input in ms
    read_interval: 200
  autoshutdown:
    # shutdown after 5 minutes (5 x 60 s)
    idle_time: 300
  soundalsa:
    # the initial maximal volume [%]
    max: 100
    # the step to increase / decrease volume [% of total]
    step: 1
    # the default card
    default_card: 1
    # the volume controls (adapt to your needs in ~/.asoundrc) or use profiles
    # (see below)
    # index is the card index
    controls:
      0: 'Headphone'
      1: 'Master'
    # dictionary of files containing ALSA profiles
    # each file here must be usable as an `~/.asoundrc`
    # the index is used to specify the default or to switch profiles
    # leave empty for no
    profiles:
      'speaker': '${APP_PATH}/asound_speaker.conf'
      'headphones': '${APP_PATH}/asound_headphones.conf'
    # index of `profiles` above that serves as default
    default_profile: 'speaker'
  soundpwwp:
    # the initial maximal volume [%]
    max: 50
    # the step to increase / decrease volume [% of total]
    step: 1
    # the sink to set at startup (`node.name` or 'default')
    # find the `node.name` using `pw-cli ls Node`
    # 'default' uses the magical '@DEFAULT_AUDIO_SINK@'
    # built-in audio card: 'alsa_output.platform-bcm2835_audio.stereo-fallback'
    # hifiberry dac: 'alsa_output.platform-soc_sound.stereo-fallback'
    default_sink: 'default'
  espeak:
    # the amplitude to use (between 1 and 200)
    amplitude: '200'
    # the app to use (`espeak` or `espeak-ng`)
    app: 'espeak-ng'
    # how to output the date
    format-date: 'Heute ist %A der %d. %B %Y'
    # how to output the date
    format-day: 'Heute ist %A'
    # how to output the time
    format-time: 'Es ist %H Uhr und %M Minuten'
    # locale for `strftime()`
    format-locale: 'de_DE'
    # the voice to use (must be installed)
    voice: 'de'
    # pitch of the voice between 1 and 99
    pitch: '50'
